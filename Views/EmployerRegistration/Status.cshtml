@model IEnumerable<TVOnline.Models.EmployerRegistrationRequest>

@{
    ViewData["Title"] = "Trạng thái đăng ký nhà tuyển dụng";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Trạng thái đăng ký nhà tuyển dụng</h3>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="fas fa-plus-circle me-1"></i>Tạo yêu cầu mới
                    </a>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <div class="display-1 text-muted">
                                <i class="fas fa-file-alt"></i>
                            </div>
                            <h4 class="mt-3">Bạn chưa có yêu cầu đăng ký nào</h4>
                            <p>Hãy tạo yêu cầu đăng ký để trở thành nhà tuyển dụng trên TVOnline</p>
                            <a asp-action="Index" class="btn btn-primary mt-3">
                                <i class="fas fa-plus-circle me-2"></i>Tạo yêu cầu
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Công ty</th>
                                        <th>Thành phố</th>
                                        <th>Ngày đăng ký</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày xử lý</th>
                                        <th>Ghi chú</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var request in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(request.LogoURL))
                                                    {
                                                        <img src="@request.LogoURL" alt="@request.CompanyName" class="me-2" style="width: 40px; height: 40px; object-fit: contain;">
                                                    }
                                                    else
                                                    {
                                                        <div class="me-2 bg-light rounded d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                            <i class="fas fa-building text-secondary"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <div class="fw-bold">@request.CompanyName</div>
                                                        <small class="text-muted">@request.Field</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@(request.City?.CityName ?? "N/A")</td>
                                            <td>@request.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                @switch (request.Status)
                                                {
                                                    case "Pending":
                                                        <span class="badge bg-warning text-dark">Đang chờ xử lý</span>
                                                        break;
                                                    case "Approved":
                                                        <span class="badge bg-success">Đã chấp thuận</span>
                                                        break;
                                                    case "Rejected":
                                                        <span class="badge bg-danger">Đã từ chối</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@request.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @(request.ProcessedAt.HasValue ? request.ProcessedAt.Value.ToString("dd/MM/yyyy HH:mm") : "-")
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(request.AdminNotes))
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-info" data-bs-toggle="tooltip" data-bs-placement="top" title="@request.AdminNotes">
                                                        <i class="fas fa-info-circle"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
