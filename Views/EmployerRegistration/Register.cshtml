@model TVOnline.ViewModels.EmployerRegistration.EmployerRegistrationViewModel

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Đăng ký trở thành nhà tuyển dụng</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Submit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CompanyName" class="form-label"></label>
                            <input asp-for="CompanyName" class="form-control" />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CityId" class="form-label"></label>
                            <select asp-for="CityId" class="form-select">
                                <option value="">-- Chọn thành phố --</option>
                            </select>
                            <span asp-validation-for="CityId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Field" class="form-label"></label>
                            <input asp-for="Field" class="form-control" />
                            <span asp-validation-for="Field" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text text-muted">Mô tả chi tiết về công ty, lĩnh vực hoạt động và các thông tin khác.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Logo" class="form-label"></label>
                            <input type="file" asp-for="Logo" class="form-control" />
                            <span asp-validation-for="Logo" class="text-danger"></span>
                            <small class="form-text text-muted">Tải lên logo công ty của bạn (không bắt buộc)</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Đăng ký</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Hiển thị thông báo đang tải
            var citySelect = $('#CityId');
            citySelect.html('<option value="">Đang tải danh sách thành phố...</option>');
            
            // Gọi API để lấy danh sách thành phố
            $.ajax({
                url: '@Url.Action("GetCities", "EmployerRegistration")',
                type: 'GET',
                dataType: 'json',
                success: function(data) {
                    // Xóa thông báo đang tải
                    citySelect.empty();
                    
                    // Thêm option mặc định
                    citySelect.append($('<option></option>').val('').text('-- Chọn thành phố --'));
                    
                    // Thêm các option từ dữ liệu API
                    if (data && data.length > 0) {
                        $.each(data, function(i, city) {
                            citySelect.append($('<option></option>').val(city.cityId).text(city.cityName));
                        });
                    } else {
                        citySelect.append($('<option></option>').val('').text('Không có dữ liệu thành phố'));
                    }
                },
                error: function(xhr, status, error) {
                    console.error('Lỗi khi tải danh sách thành phố:', error);
                    citySelect.html('<option value="">Không thể tải danh sách thành phố</option>');
                }
            });
        });
    </script>
}
