@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using TVOnline.Models
@using TVOnline.Services
@inject SignInManager<Users> SignInManager
@inject UserManager<Users> UserManager
@inject IPremiumUserService PremiumUserService
@inject INotificationService NotificationService
@inject TVOnline.Data.AppDbContext DbContext

<ul class="ms-auto d-flex align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var isPremium = await PremiumUserService.IsUserPremium(user.Id);
        var unreadNotificationCount = await NotificationService.GetUnreadNotificationCountAsync(user.Id);
        var recentNotifications = await DbContext.Notifications
            .Where(n => n.UserId == user.Id)
            .OrderByDescending(n => n.CreatedAt)
            .Take(5)
            .ToListAsync();
        
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Admin" asp-controller="AdminDashboard" asp-action="Index">
                    <i class="bi bi-briefcase"></i> Trang chủ Admin
                </a>
            </li>
        }
        
        @if (!User.IsInRole("Employer"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="EmployerRegistration" asp-action="Register">
                    <i class="bi bi-briefcase"></i> Trở thành nhà tuyển dụng
                </a>
            </li>
        }else{
			<li class="nav-item">
				<a class="nav-link text-dark" asp-area="" asp-controller="EmployerDashboard" asp-action="Index">
					<i class="bi bi-briefcase"></i> Trang nhà tuyển dụng
				</a>
			</li>
		}

        <li class="nav-item dropdown me-3">
            <a class="nav-link position-relative notification-toggle" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-bell fs-5"></i>
                @if (unreadNotificationCount > 0)
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger notification-badge" id="notificationBadge">
                        @(unreadNotificationCount > 99 ? "99+" : unreadNotificationCount.ToString())
                    </span>
                }
            </a>
            <div class="dropdown-menu dropdown-menu-end notification-dropdown p-0 shadow-lg border-0" aria-labelledby="notificationDropdown">
                <div class="notification-header d-flex justify-content-between align-items-center p-3 border-bottom">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-bell me-2"></i>
                        <h6 class="mb-0">Thông báo</h6>
                        @if (unreadNotificationCount > 0)
                        {
                            <span class="badge bg-danger ms-2">@unreadNotificationCount mới</span>
                        }
                    </div>
                    <div class="notification-actions">
                        @if (unreadNotificationCount > 0)
                        {
                            <a href="/Notification/MarkAllAsRead?returnUrl=@Context.Request.Path" class="btn btn-sm btn-link text-decoration-none">
                                <i class="bi bi-check-all"></i> Đọc tất cả
                            </a>
                        }
                        <a href="/Notification/Index" class="btn btn-sm btn-link text-decoration-none">
                            <i class="bi bi-arrow-right"></i> Xem tất cả
                        </a>
                    </div>
                </div>
                <div class="notification-body" style="max-height: 400px; overflow-y: auto;">
                    @if (recentNotifications.Any())
                    {
                        foreach (var notification in recentNotifications)
                        {
                            <div class="notification-item @(!notification.IsRead ? "unread" : "") p-3 border-bottom">
                                <div class="d-flex align-items-start">
                                    <div class="notification-icon me-3">
                                        @if (!notification.IsRead)
                                        {
                                            <div class="notification-dot"></div>
                                        }
                                        <i class="bi bi-bell-fill text-primary fs-5"></i>
                                    </div>
                                    <div class="notification-content flex-grow-1">
                                        <h6 class="notification-title mb-1">@notification.Title</h6>
                                        <p class="notification-message mb-1">@notification.Message</p>
                                        <div class="notification-meta d-flex justify-content-between align-items-center">
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i>
                                                @{
                                                    var timeAgo = DateTime.Now - notification.CreatedAt;
                                                    if (timeAgo.TotalMinutes < 60)
                                                    {
                                                        @($"{Math.Floor(timeAgo.TotalMinutes)} phút trước")
                                                    }
                                                    else if (timeAgo.TotalHours < 24)
                                                    {
                                                        @($"{Math.Floor(timeAgo.TotalHours)} giờ trước")
                                                    }
                                                    else
                                                    {
                                                        @notification.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                                    }
                                                }
                                            </small>
                                            <div class="notification-actions">
                                                @if (!notification.IsRead)
                                                {
                                                    <a href="/Notification/MarkAsRead/@notification.Id?returnUrl=@Context.Request.Path" 
                                                       class="btn btn-sm btn-link text-decoration-none p-0 me-2">
                                                        <i class="bi bi-check-circle"></i>
                                                    </a>
                                                }
                                                @if (!string.IsNullOrEmpty(notification.Link))
                                                {
                                                    <a href="@notification.Link" class="btn btn-sm btn-link text-decoration-none p-0">
                                                        <i class="bi bi-arrow-right-circle"></i>
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center p-4">
                            <i class="bi bi-bell-slash fs-1 text-muted"></i>
                            <p class="mt-2 mb-0 text-muted">Không có thông báo mới</p>
                        </div>
                    }
                </div>
            </div>
        </li>

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="~/images/account-bg.jpg" alt="User Avatar" class="rounded-circle" width="32" height="32">
                <span class="ms-2">@User.Identity.Name</span>
            </a>

            <ul class="dropdown-menu dropdown-menu-end user-dropdown-menu" aria-labelledby="userDropdown">
                <li class="user-info">@User.Identity.Name</li>
                <li><a class="dropdown-item" asp-area="" asp-controller="EditUserProfile" asp-action="Index"><i class="bi bi-person"></i> Chỉnh sửa tài khoản</a></li>
                <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="AppliedJob"><i class="bi bi-file-earmark-text"></i> CV của tôi</a></li>
                @if (isPremium)
                {
                    <li><a class="dropdown-item" asp-area="" asp-controller="PremiumCV" asp-action="Index"><i class="bi bi-star-fill"></i> Mẫu CV Premium</a></li>
                }
                <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="GetSavedJobs"><i class="bi bi-bookmark"></i> Công việc đã lưu</a></li>
                <li><a class="dropdown-item" asp-area="" asp-controller="AccountStatus" asp-action="Index"><i class="bi bi-person-badge"></i> Trạng thái tài khoản</a></li>
                @if (isPremium)
                {
                    <li><a class="dropdown-item" asp-area="" asp-controller="Premium" asp-controller="Home" asp-action="Index"><i class="bi bi-star-fill text-warning"></i> Premium Dashboard</a></li>
                }
                else
                {
                    <li class="dropdown-item upgrade-item">
                        <div class="d-flex flex-column">
                            <a class="btn btn-warning btn-sm mb-2" asp-area="" asp-controller="Account" asp-action="UpgradeAccount">
                                <i class="bi bi-star-fill me-1"></i> Nâng Cấp Premium
                            </a>
                            <small class="text-muted">
                                <i class="bi bi-check-circle-fill text-success me-1"></i>Mẫu CV chuyên nghiệp<br>
                                <i class="bi bi-check-circle-fill text-success me-1"></i>Ưu tiên hiển thị CV<br>
                                <i class="bi bi-check-circle-fill text-success me-1"></i>Hỗ trợ 24/7
                            </small>
                        </div>
                    </li>
                }
                <li><a class="dropdown-item" asp-area="" asp-controller="Payment" asp-action="PaymentHistory"><i class="bi bi-credit-card"></i> Lịch sử giao dịch</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" asp-area="" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Đăng xuất</a></li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-outline-primary me-2" asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary me-2" asp-area="" asp-controller="Account" asp-action="Register">Đăng kí</a>
        </li>
    }
</ul>

<style>
    .upgrade-item {
        padding: 0.5rem 1rem;
    }
    .upgrade-item .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #000;
        font-weight: 500;
    }
    .upgrade-item .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
    }
    .upgrade-item small {
        font-size: 0.75rem;
        line-height: 1.4;
    }
    .dropdown-menu {
        position: absolute;
        z-index: 1000;
        display: none;
        min-width: 10rem;
        padding: 0.5rem 0;
        margin: 0;
        font-size: 1rem;
        color: #212529;
        text-align: left;
        list-style: none;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid rgba(0, 0, 0, 0.15);
        border-radius: 0.25rem;
    }
    .dropdown-menu.show {
        display: block;
    }
    .dropdown-menu-end {
        right: 0;
        left: auto;
    }
    .notification-toggle {
        cursor: pointer;
    }
    
    .notification-badge {
        font-size: 0.65rem;
        padding: 0.25em 0.6em;
    }
    
    .notification-dropdown {
        width: 380px;
        border-radius: 0.5rem;
    }
    
    .notification-header {
        background-color: #f8f9fa;
    }
    
    .notification-body::-webkit-scrollbar {
        width: 5px;
    }
    
    .notification-body::-webkit-scrollbar-track {
        background: #f1f1f1;
    }
    
    .notification-body::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 5px;
    }
    
    .notification-item {
        transition: background-color 0.2s ease;
    }
    
    .notification-item:hover {
        background-color: #f8f9fa;
    }
    
    .notification-item.unread {
        background-color: #f0f7ff;
    }
    
    .notification-icon {
        position: relative;
    }
    
    .notification-dot {
        position: absolute;
        top: -2px;
        right: -2px;
        width: 8px;
        height: 8px;
        background-color: #dc3545;
        border-radius: 50%;
    }
    
    .notification-title {
        font-size: 0.9rem;
        font-weight: 600;
        color: #2c3e50;
    }
    
    .notification-message {
        font-size: 0.85rem;
        color: #6c757d;
    }
    
    .notification-meta {
        font-size: 0.75rem;
    }
    
    .notification-actions .btn-link {
        color: #6c757d;
    }
    
    .notification-actions .btn-link:hover {
        color: #0d6efd;
    }
    
    @@media (max-width: 576px) {
        .notification-dropdown {
            width: 100vw;
            margin: 0;
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            border-radius: 0;
        }
        
        .notification-body {
            max-height: calc(100vh - 60px) !important;
        }
    }
</style>
