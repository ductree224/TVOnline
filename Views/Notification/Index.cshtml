@model List<TVOnline.Models.Notification>

@{
    ViewData["Title"] = "Thông báo";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4 shadow">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center bg-gradient-primary text-white">
                    <h4 class="mb-0">Thông báo của bạn</h4>
                    <div>
                        @if (Model.Any(n => !n.IsRead))
                        {
                            <a href="@Url.Action("MarkAllAsRead", "Notification")" class="btn btn-sm btn-light">
                                <i class="bi bi-check-all me-1"></i> Đánh dấu tất cả đã đọc
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        @if (Model.Any())
                        {
                            <table class="table align-items-center mb-0">
                                <thead>
                                    <tr>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Trạng thái</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Tiêu đề</th>
                                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Nội dung</th>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Thời gian</th>
                                        <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var notification in Model)
                                    {
                                        <tr class="@(notification.IsRead ? "" : "table-light")">
                                            <td class="align-middle text-center">
                                                @if (notification.IsRead)
                                                {
                                                    <span class="badge bg-secondary"><i class="bi bi-check-circle me-1"></i> Đã đọc</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-primary"><i class="bi bi-exclamation-circle me-1"></i> Chưa đọc</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex px-3 py-1">
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm @(notification.IsRead ? "" : "fw-bold")">@notification.Title</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-sm font-weight-normal mb-0">@notification.Message</p>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-normal">@notification.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                @if (!notification.IsRead)
                                                {
                                                    <a href="@Url.Action("MarkAsRead", "Notification", new { id = notification.Id, returnUrl = Context.Request.Path })" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-check"></i> Đánh dấu đã đọc
                                                    </a>
                                                }
                                                @if (!string.IsNullOrEmpty(notification.Link))
                                                {
                                                    <a href="@Url.Action("Details", "Notification", new { id = notification.Id })" class="btn btn-sm btn-primary ms-2">
                                                        <i class="bi bi-arrow-right"></i> Xem chi tiết
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-bell-slash fs-1 text-secondary"></i>
                                <p class="mt-3 text-secondary">Bạn chưa có thông báo nào.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table > :not(caption) > * > * {
            padding: 0.75rem;
        }
        .table tbody tr {
            transition: all 0.2s ease;
        }
        .table tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }
        .card-header.bg-gradient-primary {
            background-image: linear-gradient(195deg, #5e72e4 0%, #825ee4 100%);
        }
    </style>
}
