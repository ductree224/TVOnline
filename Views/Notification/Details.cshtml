@model TVOnline.Models.Notification

@{
    ViewData["Title"] = "Chi tiết thông báo";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Chi tiết thông báo</h4>
                    <a href="@Url.Action("Index", "Notification")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
                <div class="card-body">
                    <div class="alert alert-light border rounded-3 mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="me-3">
                                <i class="bi bi-bell-fill fs-3 text-primary"></i>
                            </div>
                            <div>
                                <h5 class="alert-heading mb-0">@Model.Title</h5>
                                <small class="text-muted">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                        </div>
                        <hr>
                        <p class="mb-3">@Model.Message</p>

                    </div>
                    
                    <div class="card bg-light border-0 mt-4">
                        <div class="card-body">
                            <h6 class="mb-3"><i class="bi bi-info-circle me-2"></i>Thông tin thêm</h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Trạng thái:</strong> 
                                        @if (Model.IsRead)
                                        {
                                            <span class="badge bg-success ms-2">Đã đọc</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning ms-2">Chưa đọc</span>
                                        }
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Thời gian tạo:</strong> <span class="ms-2">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Có thể thêm các xử lý JavaScript nếu cần
        });
    </script>
}
