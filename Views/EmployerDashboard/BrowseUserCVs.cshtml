@model List<TVOnline.Models.Users>

@{
    ViewData["Title"] = "Danh sách CV người dùng";
    Layout = "_EmployerDashboardLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h6>Danh sách CV người dùng</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <form method="get" action="@Url.Action("BrowseUserCVs", "EmployerDashboard")" class="row g-3">
                                <div class="col-md-5">
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                                        <input type="text" class="form-control" name="searchTerm" placeholder="Tìm kiếm theo tên, kỹ năng, kinh nghiệm..." value="@ViewBag.SearchTerm">
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-tags"></i></span>
                                        <input type="text" class="form-control" name="skills" placeholder="Tìm kiếm theo kỹ năng cụ thể..." value="@ViewBag.Skills">
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="row">
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var user in Model)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card h-100">
                                        <div class="card-header pb-0 d-flex align-items-center">
                                            <div class="d-flex align-items-center">
                                                <img src="https://ui-avatars.com/api/?name=@(user.FullName ?? "User")" class="avatar avatar-sm me-3" alt="user avatar">
                                                <div>
                                                    <h6 class="mb-0">@user.FullName</h6>
                                                    <p class="text-xs text-secondary mb-0">@user.Email</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            @if (!string.IsNullOrEmpty(user.Biography))
                                            {
                                                <div class="mb-3">
                                                    <h6 class="text-sm mb-1">Giới thiệu</h6>
                                                    <p class="text-xs text-secondary mb-0">@(user.Biography.Length > 100 ? user.Biography.Substring(0, 100) + "..." : user.Biography)</p>
                                                </div>
                                            }

                                            @if (!string.IsNullOrEmpty(user.Skills))
                                            {
                                                <div class="mb-3">
                                                    <h6 class="text-sm mb-1">Kỹ năng</h6>
                                                    <div class="d-flex flex-wrap gap-1">
                                                        @foreach (var skill in user.Skills.Split(',', StringSplitOptions.RemoveEmptyEntries).Take(5))
                                                        {
                                                            <span class="badge bg-light text-dark">@skill.Trim()</span>
                                                        }
                                                        @if (user.Skills.Split(',', StringSplitOptions.RemoveEmptyEntries).Length > 5)
                                                        {
                                                            <span class="badge bg-light text-dark">+@(user.Skills.Split(',', StringSplitOptions.RemoveEmptyEntries).Length - 5)</span>
                                                        }
                                                    </div>
                                                </div>
                                            }

                                            @if (!string.IsNullOrEmpty(user.WorkExperience))
                                            {
                                                <div class="mb-3">
                                                    <h6 class="text-sm mb-1">Kinh nghiệm</h6>
                                                    <p class="text-xs text-secondary mb-0">@(user.WorkExperience.Length > 100 ? user.WorkExperience.Substring(0, 100) + "..." : user.WorkExperience)</p>
                                                </div>
                                            }

                                            @if (!string.IsNullOrEmpty(user.Education))
                                            {
                                                <div class="mb-3">
                                                    <h6 class="text-sm mb-1">Học vấn</h6>
                                                    <p class="text-xs text-secondary mb-0">@(user.Education.Length > 100 ? user.Education.Substring(0, 100) + "..." : user.Education)</p>
                                                </div>
                                            }

                                            <div class="mt-3 d-flex justify-content-between">
                                                @if (!string.IsNullOrEmpty(user.CvFileUrl))
                                                {
                                                    <div>
                                                        <span class="badge bg-success me-2">
                                                            <i class="fas fa-file-pdf me-1"></i> CV đính kèm
                                                        </span>
                                                        <small class="text-muted">
                                                            Cập nhật: @(user.LastCvUpdate?.ToString("dd/MM/yyyy") ?? "N/A")
                                                        </small>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="d-flex justify-content-between">
                                                <a href="@Url.Action("ViewUserCV", "EmployerDashboard", new { userId = user.Id })" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-eye me-1"></i> Xem chi tiết
                                                </a>
                                                @if (!string.IsNullOrEmpty(user.CvFileUrl))
                                                {
                                                    <a href="/uploads/cv/@user.CvFileUrl" target="_blank" class="btn btn-sm btn-info">
                                                        <i class="fas fa-file-download me-1"></i> Tải CV
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12 text-center py-5">
                                <div class="empty-state">
                                    <i class="bi bi-search text-muted" style="font-size: 3rem;"></i>
                                    <h5 class="mt-3">Không tìm thấy CV nào</h5>
                                    <p class="text-muted">Không có CV người dùng nào phù hợp với tiêu chí tìm kiếm của bạn.</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // JavaScript code if needed
        });
    </script>
}
