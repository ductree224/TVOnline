@model TVOnline.Models.EmployerRegistrationRequest

@{
    ViewData["Title"] = "Chi tiết yêu cầu đăng ký nhà tuyển dụng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Chi tiết yêu cầu đăng ký nhà tuyển dụng</h1>
        <a asp-action="Index" class="btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50 me-1"></i>Quay lại danh sách
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin đăng ký</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h5 class="text-muted mb-1">Công ty</h5>
                                <p class="h5">@Model.CompanyName</p>
                            </div>
                            <div class="mb-3">
                                <h5 class="text-muted mb-1">Email</h5>
                                <p>@Model.Email</p>
                            </div>
                            <div class="mb-3">
                                <h5 class="text-muted mb-1">Lĩnh vực</h5>
                                <p>@Model.Field</p>
                            </div>
                            <div class="mb-3">
                                <h5 class="text-muted mb-1">Thành phố</h5>
                                <p>@(Model.City?.CityName ?? "N/A")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h5 class="text-muted mb-1">Website</h5>
                                <p>
                                    @if (!string.IsNullOrEmpty(Model.Website))
                                    {
                                        <a href="@Model.Website" target="_blank">@Model.Website</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có</span>
                                    }
                                </p>
                            </div>
                            <div class="mb-3">
                                <h5 class="text-muted mb-1">Ngày đăng ký</h5>
                                <p>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                            <div class="mb-3">
                                <h5 class="text-muted mb-1">Trạng thái</h5>
                                <p>
                                    @switch (Model.Status)
                                    {
                                        case "Pending":
                                            <span class="badge bg-warning text-dark">Đang chờ xử lý</span>
                                            break;
                                        case "Approved":
                                            <span class="badge bg-success">Đã chấp thuận</span>
                                            break;
                                        case "Rejected":
                                            <span class="badge bg-danger">Đã từ chối</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@Model.Status</span>
                                            break;
                                    }
                                </p>
                            </div>
                            @if (Model.ProcessedAt.HasValue)
                            {
                                <div class="mb-3">
                                    <h5 class="text-muted mb-1">Ngày xử lý</h5>
                                    <p>@Model.ProcessedAt.Value.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="text-muted mb-2">Mô tả công ty</h5>
                        <div class="p-3 bg-light rounded">
                            @Model.Description
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.AdminNotes))
                    {
                        <div class="mb-4">
                            <h5 class="text-muted mb-2">Ghi chú của quản trị viên</h5>
                            <div class="p-3 bg-light rounded">
                                @Model.AdminNotes
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.LogoURL))
                    {
                        <div class="mb-4">
                            <h5 class="text-muted mb-2">Logo công ty</h5>
                            <div class="text-center p-3 bg-light rounded">
                                <img src="@Model.LogoURL" alt="@Model.CompanyName" style="max-height: 150px;" class="img-fluid" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin người dùng</h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <img class="img-profile rounded-circle" src="~/img/undraw_profile.svg" style="width: 100px; height: 100px;">
                        <h5 class="mt-3">@Model.User.FullName</h5>
                        <p class="text-muted">@Model.User.Email</p>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-muted mb-1">Tên người dùng</h6>
                        <p>@Model.User.UserName</p>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-muted mb-1">Số điện thoại</h6>
                        <p>@(string.IsNullOrEmpty(Model.User.PhoneNumber) ? "Chưa cung cấp" : Model.User.PhoneNumber)</p>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-muted mb-1">Tên người dùng</h6>
                        <p>@Model.User.UserName</p>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-muted mb-1">Email đã xác thực</h6>
                        <p>
                            @if (Model.User.EmailConfirmed)
                            {
                                <span class="text-success"><i class="fas fa-check-circle me-1"></i>Đã xác thực</span>
                            }
                            else
                            {
                                <span class="text-danger"><i class="fas fa-times-circle me-1"></i>Chưa xác thực</span>
                            }
                        </p>
                    </div>
                </div>
            </div>

            @if (Model.Status == "Pending")
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Xử lý yêu cầu</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#approveModal">
                                <i class="fas fa-check-circle me-2"></i>Chấp thuận
                            </button>
                            <button type="button" class="btn btn-danger btn-lg" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                <i class="fas fa-times-circle me-2"></i>Từ chối
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@if (Model.Status == "Pending")
{
    <!-- Approve Modal -->
    <div class="modal fade" id="approveModal" tabindex="-1" aria-labelledby="approveModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Approve" asp-route-id="@Model.RequestId" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="approveModalLabel">Chấp thuận yêu cầu</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Bạn có chắc chắn muốn chấp thuận yêu cầu đăng ký nhà tuyển dụng của <strong>@Model.User.FullName</strong> cho công ty <strong>@Model.CompanyName</strong>?</p>
                        <div class="form-group">
                            <label for="adminNotes">Ghi chú (tùy chọn):</label>
                            <textarea name="adminNotes" id="adminNotes" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-success">Chấp thuận</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Reject Modal -->
    <div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Reject" asp-route-id="@Model.RequestId" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="rejectModalLabel">Từ chối yêu cầu</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Bạn có chắc chắn muốn từ chối yêu cầu đăng ký nhà tuyển dụng của <strong>@Model.User.FullName</strong> cho công ty <strong>@Model.CompanyName</strong>?</p>
                        <div class="form-group">
                            <label for="adminNotes">Lý do từ chối (bắt buộc):</label>
                            <textarea name="adminNotes" id="adminNotes" class="form-control" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-danger">Từ chối</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
