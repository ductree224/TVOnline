@model IEnumerable<TVOnline.Models.EmployerRegistrationRequest>

@{
    ViewData["Title"] = "Quản lý yêu cầu đăng ký nhà tuyển dụng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Quản lý yêu cầu đăng ký nhà tuyển dụng</h6>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.CurrentStatus == "Pending" ? "active" : "")" asp-action="Index" asp-route-status="Pending">
                            <i class="fas fa-clock me-1"></i>Đang chờ xử lý
                            @{
                                var pendingCount = Model.Count(r => r.Status == "Pending");
                                if (pendingCount > 0)
                                {
                                    <span class="badge bg-warning text-dark ms-1">@pendingCount</span>
                                }
                            }
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.CurrentStatus == "Approved" ? "active" : "")" asp-action="Index" asp-route-status="Approved">
                            <i class="fas fa-check-circle me-1"></i>Đã chấp thuận
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.CurrentStatus == "Rejected" ? "active" : "")" asp-action="Index" asp-route-status="Rejected">
                            <i class="fas fa-times-circle me-1"></i>Đã từ chối
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewBag.CurrentStatus == "All" ? "active" : "")" asp-action="Index" asp-route-status="All">
                            <i class="fas fa-list me-1"></i>Tất cả
                        </a>
                    </li>
                </ul>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <div class="display-4 text-muted">
                        <i class="fas fa-inbox"></i>
                    </div>
                    <h4 class="mt-3">Không có yêu cầu nào</h4>
                    <p class="text-muted">Hiện tại không có yêu cầu đăng ký nhà tuyển dụng nào trong trạng thái này.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Người dùng</th>
                                <th>Công ty</th>
                                <th>Lĩnh vực</th>
                                <th>Thành phố</th>
                                <th>Ngày đăng ký</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <div class="fw-bold">@item.User.FullName</div>
                                                <small class="text-muted">@item.User.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.CompanyName</td>
                                    <td>@item.Field</td>
                                    <td>@(item.City?.CityName ?? "N/A")</td>
                                    <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @switch (item.Status)
                                        {
                                            case "Pending":
                                                <span class="badge bg-warning text-dark">Đang chờ xử lý</span>
                                                break;
                                            case "Approved":
                                                <span class="badge bg-success">Đã chấp thuận</span>
                                                break;
                                            case "Rejected":
                                                <span class="badge bg-danger">Đã từ chối</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@item.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@item.RequestId" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (item.Status == "Pending")
                                            {
                                                <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#approveModal-@item.RequestId">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal-@item.RequestId">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>

                                <!-- Approve Modal -->
                                <div class="modal fade" id="approveModal-@item.RequestId" tabindex="-1" aria-labelledby="approveModalLabel-@item.RequestId" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form asp-action="Approve" asp-route-id="@item.RequestId" method="post">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="approveModalLabel-@item.RequestId">Chấp thuận yêu cầu</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Bạn có chắc chắn muốn chấp thuận yêu cầu đăng ký nhà tuyển dụng của <strong>@item.User.FullName</strong> cho công ty <strong>@item.CompanyName</strong>?</p>
                                                    <div class="form-group">
                                                        <label for="adminNotes">Ghi chú (tùy chọn):</label>
                                                        <textarea name="adminNotes" id="adminNotes" class="form-control" rows="3"></textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                    <button type="submit" class="btn btn-success">Chấp thuận</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <!-- Reject Modal -->
                                <div class="modal fade" id="rejectModal-@item.RequestId" tabindex="-1" aria-labelledby="rejectModalLabel-@item.RequestId" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form asp-action="Reject" asp-route-id="@item.RequestId" method="post">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="rejectModalLabel-@item.RequestId">Từ chối yêu cầu</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Bạn có chắc chắn muốn từ chối yêu cầu đăng ký nhà tuyển dụng của <strong>@item.User.FullName</strong> cho công ty <strong>@item.CompanyName</strong>?</p>
                                                    <div class="form-group">
                                                        <label for="adminNotes">Lý do từ chối (bắt buộc):</label>
                                                        <textarea name="adminNotes" id="adminNotes" class="form-control" rows="3" required></textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                    <button type="submit" class="btn btn-danger">Từ chối</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable();
        });
    </script>
}
