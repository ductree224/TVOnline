@model TVOnline.Models.Notification

@{
    ViewData["Title"] = "Chỉnh sửa thông báo";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Chỉnh sửa thông báo</h1>
    <p class="mb-4">Chỉnh sửa thông tin của thông báo</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Thông tin thông báo</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="form-group">
                    <label asp-for="UserId" class="control-label">Người nhận</label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
                        <option value="">-- Chọn người nhận --</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Title" class="control-label">Tiêu đề</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Message" class="control-label">Nội dung</label>
                    <textarea asp-for="Message" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Link" class="control-label">Liên kết (tùy chọn)</label>
                    <input asp-for="Link" class="form-control" />
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input asp-for="IsRead" class="custom-control-input" />
                        <label asp-for="IsRead" class="custom-control-label">Đã đọc</label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 