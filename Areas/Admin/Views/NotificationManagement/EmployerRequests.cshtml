@model IEnumerable<TVOnline.Models.EmployerRegistrationRequest>

@{
    ViewData["Title"] = "Yêu cầu nhà tuyển dụng";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Yêu cầu nhà tuyển dụng</h1>
    <p class="mb-4">Xem và quản lý tất cả các yêu cầu đăng ký nhà tuyển dụng đang chờ xử lý</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách yêu cầu đang chờ xử lý</h6>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Không có yêu cầu đăng ký nhà tuyển dụng đang chờ xử lý.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Người dùng</th>
                                <th>Công ty</th>
                                <th>Lĩnh vực</th>
                                <th>Thành phố</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <div class="fw-bold">@item.User.FullName</div>
                                                <small class="text-muted">@item.User.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.CompanyName</td>
                                    <td>@item.Field</td>
                                    <td>@(item.City?.CityName ?? "N/A")</td>
                                    <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="EmployerRequests" asp-action="Details" asp-route-id="@item.RequestId" class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> Xem chi tiết
                                        </a>
                                        <a asp-action="ProcessEmployerRequest" asp-route-id="@item.RequestId" class="btn btn-sm btn-success">
                                            <i class="fas fa-cog"></i> Xử lý
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                }
            });
        });
    </script>
} 