@model TVOnline.Areas.Admin.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<style>
    .card-body p, .card-body h6, .card-body span:not(.text-white) {
        color: #333 !important;
    }
    .text-muted {
        color: #555 !important;
    }
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .text-success {
        color: #198754 !important;
    }
    .text-danger {
        color: #dc3545 !important;
    }
    .card-header h6 {
        color: #333 !important;
        font-weight: 600;
    }
    .notification-badge {
        position: absolute;
        top: -10px;
        right: -10px;
        background-color: #dc3545;
        color: white;
        border-radius: 50%;
        padding: 5px 10px;
        font-size: 14px;
        font-weight: bold;
    }
    .alert-employer-requests {
        background-color: #f8d7da;
        border-color: #f5c2c7;
        color: #842029;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
    }
</style>

<div class="container-fluid py-4">
    <!-- Thông báo yêu cầu đăng ký nhà tuyển dụng -->
    @if (Model.PendingEmployerRequests > 0)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert-employer-requests">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1"><i class="fas fa-exclamation-circle me-2"></i> Yêu cầu đăng ký nhà tuyển dụng mới</h5>
                            <p class="mb-0">Có <strong>@Model.PendingEmployerRequests</strong> yêu cầu đăng ký nhà tuyển dụng đang chờ xử lý.</p>
                        </div>
                        <a href="@Url.Action("Index", "EmployerRequests", new { area = "Admin" })" class="btn btn-danger">
                            Xem ngay
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Thống kê tổng quan -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-primary">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class=" mb-0 opacity-9">Chào mừng đến với Trang quản trị</h4>
                            <p class=" opacity-8 mb-0">Tổng quan về hoạt động của hệ thống TVOnline</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <h6 class=" mb-0 opacity-8">Ngày hiện tại: @DateTime.Now.ToString("dd/MM/yyyy")</h6>
                            <a href="@Url.Action("Index", "NotificationManagement", new { area = "Admin" })" class="btn btn-sm btn-white mt-2">
                                <i class="fas fa-bell mr-1"></i> Quản lý thông báo
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê số liệu -->
    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card overflow-hidden">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="mb-0 text-uppercase font-weight-bold">Tổng người dùng</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @Model.TotalUsers
                                </h5>
                                <p class="mb-0 text-sm">
                                    <span class="text-success text-sm font-weight-bolder">+@Model.NewUsersThisMonth</span>
                                    <span class="text-muted">tháng này</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                                <i class="fas fa-users text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card overflow-hidden">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="mb-0 text-uppercase font-weight-bold">Nhà tuyển dụng</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @Model.TotalEmployers
                                </h5>
                                @if (Model.PendingEmployerRequests > 0)
                                {
                                    <p class="mb-0 text-sm">
                                        <span class="text-danger text-sm font-weight-bolder">+@Model.PendingEmployerRequests</span>
                                        <span class="text-muted">yêu cầu mới</span>
                                    </p>
                                }
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                                <i class="fas fa-building text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                            @if (Model.PendingEmployerRequests > 0)
                            {
                                <span class="notification-badge">@Model.PendingEmployerRequests</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card overflow-hidden">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="mb-0 text-uppercase font-weight-bold">Người tìm việc</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @Model.TotalJobSeekers
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                                <i class="fas fa-user-tie text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card overflow-hidden">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="mb-0 text-uppercase font-weight-bold">Bài đăng</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @Model.TotalPosts
                                </h5>
                                <p class="mb-0 text-sm">
                                    <span class="text-success text-sm font-weight-bolder">+@Model.NewPostsThisMonth</span>
                                    <span class="text-muted">tháng này</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                                <i class="fas fa-file-alt text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê người dùng Premium -->
    <div class="row mb-4">
        <div class="col-xl-8 col-lg-7">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Thống kê người dùng Premium</h6>
                </div>
                <div class="card-body pt-3">
                    <div class="chart">
                        <canvas id="premiumUsersChart" class="chart-canvas" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-5">
            <div class="card h-100">
                <div class="card-header pb-0">
                    <h6>Tổng quan người dùng Premium</h6>
                </div>
                <div class="card-body p-3">
                    <div class="mb-3">
                        <h5>@(Model.TotalPremiumUsers ?? 0) người dùng Premium</h5>
                        <div class="progress progress-sm">
                            @{ 
                                var premiumPercentage = Model.TotalUsers > 0 ? (Model.TotalPremiumUsers ?? 0) * 100 / Model.TotalUsers : 0;
                            }
                            <div class="progress-bar bg-gradient-success" role="progressbar" style="width: @premiumPercentage%;" aria-valuenow="@premiumPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <p class="text-sm mt-1">@premiumPercentage% tổng người dùng</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Biểu đồ người dùng Premium
            var ctx = document.getElementById('premiumUsersChart').getContext('2d');
            var premiumUsersChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6', 'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12'],
                    datasets: [{
                        label: 'Người dùng Premium',
                        data: [12, 19, 3, 5, 2, 3, 7, 8, 9, 10, 11, @(Model.TotalPremiumUsers ?? 0)],
                        backgroundColor: [
                            'rgba(75, 192, 192, 0.2)',
                        ],
                        borderColor: [
                            'rgba(75, 192, 192, 1)',
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
}
